<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>System Monitoring Web App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container">
            <span class="navbar-brand">System Monitor For <strong><%= systeminfo.platform %></strong> <% systeminfo.distro %> <% systeminfo.release %></span>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <!-- CPU Card -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">CPU Usage</h5>
                    </div>
                    <div class="card-body">
                        <div class="progress mb-3">
                            <div class="progress-bar" role="progressbar" 
                                 style="width: <%= cpu.currentLoad %>%">
                                <%= cpu.currentLoad.toFixed(1) %>%
                            </div>
                        </div>
                        <p class="mb-0">CPU Cores: <%= cpu.cpuCount %></p>
                    </div>
                </div>
            </div>

            <!-- Memory Card -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">Memory Usage</h5>
                    </div>
                    <div class="card-body">
                        <div class="progress mb-3">
                            <div class="progress-bar bg-success" role="progressbar" 
                                 style="width: <%= (memory.used/memory.total * 100).toFixed(1) %>%">
                                <%= (memory.used/memory.total * 100).toFixed(1) %>%
                            </div>
                        </div>
                        <p>Total: <%= (memory.total/1024/1024/1024).toFixed(2) %> GB</p>
                        <p>Used: <%= (memory.used/1024/1024/1024).toFixed(2) %> GB</p>
                        <p class="mb-0">Free: <%= (memory.free/1024/1024/1024).toFixed(2) %> GB</p>
                    </div>
                </div>
            </div>

            <!-- Disk Card -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">Disk Usage</h5>
                    </div>
                    <div class="card-body">
                        <% disk.forEach(function(drive) { %>
                            <h6><%= drive.filesystem %></h6>
                            <div class="progress mb-2">
                                <div class="progress-bar bg-info" role="progressbar" 
                                     style="width: <%= drive.usedPercentage %>%">
                                    <%= drive.usedPercentage.toFixed(1) %>%
                                </div>
                            </div>
                            <p>Total: <%= (drive.size/1024/1024/1024).toFixed(2) %> GB</p>
                            <p>Used: <%= (drive.used/1024/1024/1024).toFixed(2) %> GB</p>
                            <p class="mb-4">Free: <%= (drive.available/1024/1024/1024).toFixed(2) %> GB</p>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Add this after your existing cards in index.ejs -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">System Logs</h5>
                        <div class="d-flex gap-2">
                            <select class="form-select form-select-sm" id="logFilter" onchange="updateLogs()">
                                <option value="all" <%= currentFilter === 'all' ? 'selected' : '' %>>All Types</option>
                                <option value="cpu" <%= currentFilter === 'cpu' ? 'selected' : '' %>>CPU</option>
                                <option value="memory" <%= currentFilter === 'memory' ? 'selected' : '' %>>Memory</option>
                                <option value="disk" <%= currentFilter === 'disk' ? 'selected' : '' %>>Disk</option>
                                <option value="system" <%= currentFilter === 'system' ? 'selected' : '' %>>System</option>
                            </select>
                            <select class="form-select form-select-sm" id="severityFilter" onchange="updateLogs()">
                                <option value="all" <%= currentSeverity === 'all' ? 'selected' : '' %>>All Severities</option>
                                <option value="info" <%= currentSeverity === 'info' ? 'selected' : '' %>>Info</option>
                                <option value="warning" <%= currentSeverity === 'warning' ? 'selected' : '' %>>Warning</option>
                                <option value="error" <%= currentSeverity === 'error' ? 'selected' : '' %>>Error</option>
                            </select>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Time</th>
                                        <th>Type</th>
                                        <th>Severity</th>
                                        <th>Message</th>
                                        <th>Details</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% logs.forEach(function(log) { %>
                                        <tr class="<%= log.severity === 'error' ? 'table-danger' : 
                                                    log.severity === 'warning' ? 'table-warning' : 
                                                    log.severity === 'info' ? 'table-info' : '' %>">
                                            <td><%= log.timestamp.toLocaleTimeString() %></td>
                                            <td>
                                                <span class="badge <%= 
                                                    log.type === 'system' ? 'bg-purple' :
                                                    log.type === 'cpu' ? 'bg-primary' :
                                                    log.type === 'memory' ? 'bg-success' :
                                                    log.type === 'disk' ? 'bg-info' :
                                                    'bg-secondary' %>">
                                                    <%= log.type %>
                                                </span>
                                            </td>
                                            <td>
                                                <span class="badge <%= 
                                                    log.severity === 'error' ? 'bg-danger' : 
                                                    log.severity === 'warning' ? 'bg-warning' : 
                                                    'bg-info' %>">
                                                    <%= log.severity %>
                                                </span>
                                            </td>
                                            <td><%= log.message %></td>
                                            <td>
                                                <% if (log.details && Object.keys(log.details).length > 0) { %>
                                                    <button class="btn btn-sm btn-outline-secondary" 
                                                            type="button" 
                                                            data-bs-toggle="collapse" 
                                                            data-bs-target="#details-<%= log.id %>">
                                                        Show Details
                                                    </button>
                                                    <div class="collapse" id="details-<%= log.id %>">
                                                        <div class="card card-body mt-2">
                                                            <pre class="mb-0"><%= JSON.stringify(log.details, null, 2) %></pre>
                                                        </div>
                                                    </div>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script>
        function updateLogs() {
            const typeFilter = document.getElementById('logFilter').value;
            const severityFilter = document.getElementById('severityFilter').value;
            window.location.href = `/?filter=${typeFilter}&severity=${severityFilter}`;
        }
        </script>
    </div>

</body>
</html>