<div class="col-md-4 mb-4">
    <div class="card">
        <div class="card-header bg-success text-white">
            <h5 class="card-title mb-0">Memory Usage</h5>
        </div>
        <div class="card-body">
            <div class="progress mb-3">
                <div class="progress-bar bg-success" role="progressbar" 
                     style="width: <%= memory.usedPercentage.toFixed(1) %>%">
                    <%= memory.usedPercentage.toFixed(1) %>%
                </div>
            </div>
            <p class="mb-0">Used: <%= (memory.used / 1024 / 1024 / 1024).toFixed(2) %> GB</p>
            <p class="mb-0">Total: <%= (memory.total / 1024 / 1024 / 1024).toFixed(2) %> GB</p>
        </div>
    </div>
</div>